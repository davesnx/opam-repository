depends: [
  "dune" {>= "2.9"}
  "ocaml" {>= "4.08.0"}
  "cmdliner" {>= "1.1.0"}
  "gitlab-unix" {= version}
  "cohttp-lwt-unix" {>= "4.0"}
  "otoml" {>= "0.9.0"}
  "fmt" {>= "0.9.0"}
  "mdx" {with-test}
  "odoc" {with-doc}
]
build: [
  ["dune" "subst"] {dev}
  [
    "dune"
    "build"
    "-p"
    name
    "-j"
    jobs
    "--promote-install-files=false"
    "@install"
    "@runtest" {with-test}
    "@doc" {with-doc}
  ]
  ["dune" "install" "-p" name "--create-install-files" name]
]
